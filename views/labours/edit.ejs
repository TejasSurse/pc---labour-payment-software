<%- include('../partials/header', { path: '/labours' }) %>

    <div class="container d-flex justify-content-center">
        <div class="card border-0 shadow-sm" style="max-width: 600px; width: 100%;">
            <div class="card-header bg-white border-0 pt-4 pb-0">
                <h4>Edit Labour</h4>
            </div>
            <div class="card-body">
                <form action="/labours/<%= labour._id %>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" name="name" class="form-control" value="<%= labour.name %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input type="tel" name="phone" class="form-control" value="<%= labour.phone %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Daily Rate (â‚¹)</label>
                        <input type="number" name="dailyRate" class="form-control" value="<%= labour.dailyRate %>"
                            required>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="isActive" value="true" <%=labour.isActive
                            ? 'checked' : '' %>>
                        <label class="form-check-label">Is Active?</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Update Labour</button>
                        <a href="/labours" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>