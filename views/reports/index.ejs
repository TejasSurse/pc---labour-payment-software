<%- include('../partials/header', { path: '/reports' }) %>

    <div class="container-fluid">
        <h3 class="mb-4">Reports</h3>

        <div class="row g-4">
            <!-- Weekly Report Card -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-calendar-week me-2"></i>Weekly Pay Sheet</h5>
                        <p class="text-muted">Generate detailed weekly payment reports with attendance and calculations.
                        </p>
                        <form action="/reports/weekly" method="GET" class="d-flex gap-2 align-items-end">
                            <div class="flex-grow-1">
                                <label class="form-label">Select Date in Week</label>
                                <input type="date" name="date" class="form-control"
                                    value="<%= new Date().toISOString().split('T')[0] %>">
                            </div>
                            <button type="submit" class="btn btn-primary">Generate</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Monthly Report Card -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-calendar-month me-2"></i>Monthly Summary</h5>
                        <p class="text-muted">Generate monthly labour-wise earnings and aggregate site expenses.</p>
                        <form action="/reports/monthly" method="GET" class="d-flex gap-2 align-items-end">
                            <div class="flex-grow-1">
                                <label class="form-label">Select Month</label>
                                <input type="month" name="month" class="form-control"
                                    value="<%= new Date().toISOString().slice(0, 7) %>">
                            </div>
                            <button type="submit" class="btn btn-primary">Generate</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>